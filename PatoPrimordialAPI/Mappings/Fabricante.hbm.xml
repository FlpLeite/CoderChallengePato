<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="PatoPrimordialAPI" namespace="PatoPrimordialAPI.Domain.Entities">
  <class name="Fabricante" table="fabricantes" schema="public" lazy="false" batch-size="50">
    <id name="Id" column="id" type="Int64">
      <generator class="identity" />
    </id>

    <property name="Nome" column="nome" type="String" length="200" not-null="true" />
    <property name="Marca" column="marca" type="String" length="200" />
    <property name="PaisOrigem" column="pais_origem" type="String" length="150" />

    <bag name="Drones" inverse="true" cascade="none" lazy="true" batch-size="50">
      <key column="fabricante_id" />
      <one-to-many class="Drone" />
    </bag>
  </class>
</hibernate-mapping>
