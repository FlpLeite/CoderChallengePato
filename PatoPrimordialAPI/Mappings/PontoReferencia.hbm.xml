<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="PatoPrimordialAPI" namespace="PatoPrimordialAPI.Domain.Entities">
  <class name="PontoReferencia" table="pontos_referencia" schema="public" lazy="false" batch-size="50">
    <id name="Id" column="id" type="Int64">
      <generator class="identity" />
    </id>

    <property name="Nome" column="nome" type="String" length="200" not-null="true" />
    <property name="Latitude" column="lat" type="Double" not-null="true" />
    <property name="Longitude" column="lon" type="Double" not-null="true" />
    <property name="RaioMetros" column="raio_m" type="Double" not-null="true" />

    <bag name="Patos" inverse="true" cascade="none" lazy="true" batch-size="50">
      <key column="ponto_referencia_id" />
      <one-to-many class="Pato" />
    </bag>
  </class>
</hibernate-mapping>
